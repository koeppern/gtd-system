# GTD Frontend Environment Configuration
# Copy this file to .env.local and adjust the values

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000

# App Configuration
NEXT_PUBLIC_APP_NAME="GTD - Getting Things Done"
NEXT_PUBLIC_APP_DESCRIPTION="Modern productivity app based on David Allen's GTD methodology"

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_OFFLINE=true

# Development
NEXT_PUBLIC_DEVELOPMENT_MODE=true